@model ServiceDetailsVM
@section Header {
    Details Service
}
<p>Image Name: @Model.ImageName</p>

<div class="col-md-12">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Model.Name</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>IsDeleted</th>
                            <th>CreatedAt</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Description</td>
                            <td>@(Model.IsDeleted ? "Is Deleted" : "Active")</td>
                            <td>@Model.CreatedAt.ToString("MM/dd/yyyy hh:mm tt")</td>
                            <td>
                                <img src="~/files/images/@Model.ImageName" width="50px" alt="@Model.Name" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Back to Index Button -->
    <div class="mt-3">
        <a asp-controller="Service" asp-action="Index" class="btn btn-secondary">Back to Index</a>
    </div>
</div>
