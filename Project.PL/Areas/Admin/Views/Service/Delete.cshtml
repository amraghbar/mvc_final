@model ServiceVM
@section Header {
   Delete Service
}
<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title"> Delete Confirmation </h3>
    </div>

    <div class="card-body">
        <p>are you sure to want to delete @Model.Name Service ?</p>
    </div>

    <div class="card-footer">
        <form asp-controller="Service" asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="Submit" class="btn btn-danger"> Delete </button>
            <a asp-controller="Service" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
