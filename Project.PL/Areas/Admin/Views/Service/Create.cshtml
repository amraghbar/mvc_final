@model ServiceFormVM
@section Header {
    Service
}


<div class="col-md-12">
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create </h3>
    </div>

        <form asp-controller="Service" asp-action="Create" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Name"> </label>
                    <input asp-for="Name" class="form-control" placeholder="Enter name">
            </div>
                <div class="form-group">
                    <label asp-for="Description"> </label>
                    <input asp-for="Description" class="form-control" placeholder="Enter Description">
                </div>
                <div class="form-group">
                    <label asp-for="Image"> </label>
                    <input asp-for="Image" class="form-control-file">
                </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
    <div class="mt-3">
        <a asp-controller="Service" asp-action="Index" class="btn btn-secondary">Back to Index</a>
    </div>
</div>