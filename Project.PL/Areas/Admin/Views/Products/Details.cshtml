@model Project.PL.Areas.Admin.ViewModels.Product.ProductsDetailsVM

@section Header {
    Products Details
}

<div class="col-md-12">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Model.Name_Product</h3>
            </div>

            <!-- جدول تفاصيل المنتج -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>IsDeleted</th>
                            <th>CreatedAt</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@(Model.IsDeleted ? "Is Deleted" : "Active")</td>
                            <td>@Model.CreatedAt.ToString("MM/dd/yyyy hh:mm tt")</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- عرض الـ Items الخاصة بالمنتج -->
            <div class="card-body">
                <h4>Items</h4>
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Af_Price</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- زر الرجوع إلى صفحة الفهرس -->
    <div class="mt-3">
        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Back to Index</a>
    </div>
</div>
