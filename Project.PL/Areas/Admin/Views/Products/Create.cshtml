@model ProductsFormVM

@section Header {
     Products Create
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create </h3>
        </div>

        <form id="Featureds" asp-controller="InspiredProducts" asp-action="Create" enctype="multipart/form-data">
            <div class="card-body">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(true)
                    </div>
                }

                <div class="form-group">
                    <label asp-for="Name_Product "></label>
                    <input asp-for="Name_Product " class="form-control" placeholder="Enter name" />
                    <span asp-validation-for="Name_Product " class="text-danger"></span> <!-- رسالة الخطأ هنا -->
                </div>
               
                <div class="form-group">
                    <img src="#" id="imagePreview" style="display:none" width="80px;" />
                </div>

            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
    <div class="mt-3">
        <a asp-controller="InspiredProducts" asp-action="Index" class="btn btn-secondary">Back to Index</a>
    </div>
</div>
@section Js {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
       
        
        $(document).ready(function () {
            $('#Featureds').on('submit', function (e) {
                e.preventDefault();

                // Check for empty fields
                var name = $('#Name_Product').val().trim();
               ;

                if (!name ) {
                    Swal.fire({
                        toast: true,
                        position: 'top-end',
                        icon: 'warning',
                        title: 'Please fill out all fields!',
                        showConfirmButton: false,
                        timer: 3000
                    });
                    return; // Stop form submission
                }

                var formData = new FormData(this);

                $.ajax({
                    url: '@Url.Action("Create", "Products")',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        // Success Toast
                        Swal.fire({
                            toast: true,
                            position: 'top-end',
                            icon: 'success',
                            title: 'Product added successfully!',
                            showConfirmButton: false,
                            timer: 1000
                        }).then(function () {
                            // Redirect to Index page after the toast disappears
                            window.location.href = '@Url.Action("Index", "Products")';
                        });

                        // Reset form after success
                        $('#newProductForm')[0].reset();
                    }
                    ,
                    error: function (xhr) {
                        // Error Toast
                        Swal.fire({
                            toast: true,
                            position: 'top-end',
                            icon: 'error',
                            title: 'Failed to add product. Please try again.',
                            showConfirmButton: false,
                            timer: 3000
                        });

                        // Display error summary if available
                        if (xhr.responseJSON && xhr.responseJSON.errors) {
                            var errors = xhr.responseJSON.errors;
                            $('#error-summary').show();
                            $('#error-summary').html('');
                            $.each(errors, function (key, value) {
                                $('#error-summary').append('<p>' + value[0] + '</p>');
                            });
                        } else {
                            $('#error-summary').show();
                            $('#error-summary').html('<p>An unexpected error occurred.</p>');
                        }
                    }

                });
            });
        });
    </script>
}

