@model Project.PL.Areas.Admin.ViewModels.Item.ItemDetailsVM

@section Header {
    Item Details
}

<div class="col-md-12">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@Model.Name</h3>

                <div class="card-tools">
                    <form method="get" action="@Url.Action("Index", "Items")">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Product Name:</h5>
                        <p>@Model.ProductName</p> <!-- عرض اسم المنتج -->
                    </div>
                    <div class="col-md-6 text-right">
                        <h5>Status:</h5>
                        <p>@(Model.IsDeleted ? "Is Deleted" : "Active")</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h5>Created At:</h5>
                        <p>@Model.CreatedAt.ToString("MM/dd/yyyy hh:mm tt")</p>
                    </div>
                    <div class="col-md-6 text-right">
                        <h5>Before Price:</h5>
                        <p>@Model.Be_Price</p>
                        <h5>After Price:</h5>
                        <p>@Model.Af_Price</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h5>Image:</h5>
                        @if (!string.IsNullOrEmpty(Model.ImageName))
                        {
                            <img src="~/files/images/@Model.ImageName" width="150px" alt="@Model.Name" />
                        }
                        else
                        {
                            <img src="~/files/images/placeholder.png" width="150px" alt="No Image Available" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Index Button -->
    <div class="mt-3">
        <a asp-controller="Items" asp-action="Index" class="btn btn-secondary">Back to Index</a>
    </div>
</div>
