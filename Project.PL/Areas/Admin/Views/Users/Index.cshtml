@model List<UserRolesViewModel>
@section Header {
    <h2>Users Management</h2>
}

<div class="container mt-4">
    <h2>Manage Users</h2>

    <!-- جدول المستخدمين -->
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>User Name</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <td>
                        <!-- زر تعديل الأدوار -->
                        <a asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@user.UserId" class="btn btn-info btn-sm">Edit Roles</a>

                        <!-- زر تعديل حالة الطلب -->
                        <a asp-controller="Orders" asp-action="ChangeOrderStatus" asp-route-userId="@user.UserId" class="btn btn-warning btn-sm ml-2">Change Order Status</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
