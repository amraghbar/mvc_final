@model CombinedViewModel

<section class="blog-area section-gap">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <h2><span>Latest Blogs</span></h2>
                    <p>Bring called seed first of third give itself now ment</p>
                </div>
            </div>
        </div>

        <div class="row">
            @if (Model.LatestBlogs != null && Model.LatestBlogs.Any())
            {
                foreach (var blog in Model.LatestBlogs)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-blog">
                            <div class="thumb">
                                <img class="img-fluid" src="~/files/images/@blog.ImageName" alt="@blog.Name" />
                            </div>
                            <div class="short_details">
                                <div class="meta-top d-flex">
                                    <a href="#">By @blog.Author</a>
                                    <a href="#"><i class="ti-comments-smiley"></i>@blog.CommentsCount Comments</a>
                                </div>
                                <a class="d-block" href="single-blog.html">
                                    <h4>@blog.Name</h4>
                                </a>
                                <div class="text-wrap">
                                    <p>@blog.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No blogs available at the moment.</p>
            }
        </div>
    </div>
</section>
