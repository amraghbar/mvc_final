@model CombinedViewModel

<section class="feature_product_area section_gap_bottom_custom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <h2><span>Featured Products</span></h2>
                    <p>Bring called seed first of third give itself now ment</p>
                </div>
            </div>
        </div>

        <div class="row">
            @if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
            {
                foreach (var product in Model.FeaturedProducts)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-product">
                            <div class="product-img">
                                <img class="img-fluid w-100" src="~/files/images/@product.ImageName" alt="@product.Name" />
                                <div class="p_icon">
                                    
                                    <a asp-action="Details" asp-controller="Users" asp-route-modelName="Featureds" asp-route-id="@product.Id">
                                        <i class="ti-eye"></i>
                                    </a>
                                    <form asp-action="Add" asp-controller="Favorites" method="post" style="display: inline;">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <input type="hidden" name="productType" value="@product.GetType().Name" />
                                        <button type="submit" >
                                            <i class="ti-heart"></i>
                                        </button>
                                    </form>

                                   
                                </div>
                            </div>
                            <div class="product-btm">
                                <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="d-block">
                                    <h4>@product.Name</h4>
                                </a>
                                <div class="mt-3">
                                    <span class="mr-4">@product.Af_Price</span>
                                    <del>@product.Be_Price</del>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <h4>No featured products available at the moment.</h4>
                </div>
            }
        </div>
    </div>
</section>