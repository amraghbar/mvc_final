@model CombinedViewModel

<<section class="feature-area section_gap_bottom_custom">
    <div class="container">
        <div class="row justify-content-center">
            @if (Model.Services != null && Model.Services.Any())
            {
                foreach (var feature in Model.Services)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="single-feature text-center">
                            <a href="#" class="title" style="display: block; text-decoration: none;">
                                <img src="~/files/images/@feature.ImageName" width="70px" alt="@feature.Name" style="margin:10px;" />
                                <h2 style="font-size: 18px;">@feature.Name</h2>
                            </a>
                            <p>@feature.Description</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>