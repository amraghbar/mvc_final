@model LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Accouts.cshtml";
}
<style>
    .wrapper {
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        display: flex;
        align-items: stretch;
    }

    .inner {
        padding: 30px;
        flex: 1;
    }

    .image-holder {
        flex: 1;
        background-size: cover;
        background-position: center;
    }

        .image-holder img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    form h3 {
        margin-bottom: 20px;
        color: #333;
        text-align: center;
    }

    .form-wrapper {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #5cb85c;
            outline: none;
            box-shadow: 0 0 5px rgba(92, 184, 92, 0.4);
        }

    button {
        width: 100%;
        background: #5cb85c;
        border: none;
        padding: 10px;
        color: white;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
        transition: background 0.3s;
    }

        button:hover {
            background: #4cae4c;
        }

    .form-wrapper i {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
    }

    .mt-3 a {
        color: #5cb85c;
        text-align: center;
        display: block;
        font-weight: bold;
    }

        .mt-3 a:hover {
            text-decoration: underline;
        }
</style>
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<div class="wrapper" style="background-image: url('@Url.Content("~/Form/images/bg-registration-form-1.jpg")'); padding: 50px 20px;">
    <div class="inner" style="margin: auto; background-color: rgba(255, 255, 255, 0.9); border-radius: 15px; padding: 30px; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);">
        <form asp-action="Login" asp-controller="Accounts" method="post">
            <h3 class="text-center" style="font-weight: 700; margin-bottom: 20px; color: #333;">Login</h3>

            <div class="form-wrapper mb-3" style="position: relative;">
                <i class="zmdi zmdi-email" style="position: absolute; top: 50%; transform: translateY(-50%); left: 10px; font-size: 20px; color: #aaa;"></i>
                <input asp-for="Email" placeholder="Email Address" class="form-control" style="border-radius: 10px; padding-left: 40px;">
            </div>

            <div class="form-wrapper mb-3" style="position: relative;">
                <i class="zmdi zmdi-lock" style="position: absolute; top: 50%; transform: translateY(-50%); left: 10px; font-size: 20px; color: #aaa;"></i>
                <input asp-for="Password" type="password" placeholder="Password" class="form-control" style="border-radius: 10px; padding-left: 40px;">
            </div>

            <div class="form-group mb-4 d-flex align-items-center">
                <input asp-for="RememberMe" class="agree-term" style="margin-right: 5px; width: auto;">
                <label asp-for="RememberMe" class="label-agree-term" style="font-size: 14px; margin: 0;">Remember Me</label>
            </div>

            <button type="submit" class="btn btn-primary w-100" style="border-radius: 10px; font-weight: 600; background-color: #4CAF50; border: none;">
                Login
                <i class="zmdi zmdi-arrow-right" style="margin-left: 5px;"></i>
            </button>

            <div class="mt-3 text-center"  style="margin-top: 15px;" >
                <a class="nav-link text-dark" asp-area="" asp-action="Register" asp-controller="Accounts" style="font-size: 14px;">Don't have an account?</a>
            </div>
            <div class="mt-3 text-center" style="margin-top: 10px;">
                <a class="nav-link text-dark" asp-area="" asp-action="ForgetPassword" asp-controller="Accounts" style="font-size: 14px;">Forgot your password?</a>
            </div>
        </form>
        <div class="image-holder mt-4" style="text-align: center;">
            <img src="~/Form/images/registration-form-1.jpg" style="max-width: 100%; border-radius: 15px;">
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var loginError = '@TempData["LoginError"]';
        if (loginError) {
            toastr.error(loginError, "Login Error");
        }
    });
</script>
