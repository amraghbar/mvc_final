@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Accouts.cshtml";
}
<div class="wrapper" style="background-image: url('@Url.Content("~/Form/images/bg-registration-form-1.jpg")');">
	<div class="inner">
		<div class="image-holder">
			<img src="~/Form/images/registration-form-1.jpg" />
		</div>
		<form asp-action="Register" asp-controller="Accounts" method="post" >
			<h3>Registration Form</h3>
			<div class="form-wrapper">
				<input asp-for="UserName" placeholder="First Name" class="form-control">
			</div>
			
			<div class="form-wrapper">
				<input asp-for="Email" placeholder="Email Address" class="form-control">
				<i class="zmdi zmdi-email"></i>
			</div>
			
			<div class="form-wrapper">
				<input asp-for="Password" placeholder="Password" class="form-control">
				<i class="zmdi zmdi-lock"></i>
			</div>
			<div class="form-wrapper">
				<input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control">
				<i class="zmdi zmdi-lock"></i>
			</div>
			<button>
				Register
				<i class="zmdi zmdi-arrow-right"></i>
			</button>
			<div class="mt-3">
				<a class="nav-link text-dark" asp-area="" asp-action="Login" asp-controller="Accounts">Do You Have An Account?</a>

			</div>
		</form>
	</div>
</div>
